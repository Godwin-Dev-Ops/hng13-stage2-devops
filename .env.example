# Docker images for Blue and Green apps
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Active pool (which version receives live traffic)
# Options: blue | green
ACTIVE_POOL=blue

# Unique release identifiers (for traceability)
RELEASE_ID_BLUE=blue-v1.0.0
RELEASE_ID_GREEN=green-v1.0.0

# Internal port the apps expose inside their containers
# (Should match your appâ€™s listening port)
PORT=8080
